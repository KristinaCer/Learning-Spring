<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="country" class="com.cognizant.springlearn.model.Country" scope="prototype">
        <property name="code" value="IN" />
        <property name="name" value="India" />
    </bean>

    <bean id="countryList" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="us"></ref>
                <ref bean="de"></ref>
                <ref bean="jp"></ref>
            </list>
        </constructor-arg>
    </bean>
    <bean id="jp" class="com.cognizant.springlearn.model.Country" scope="prototype">
        <property name="name" value="Japan"/>
        <property name="code" value="JP"/>
    </bean>
    <bean id="de" class="com.cognizant.springlearn.model.Country" scope="prototype">
        <property name="name" value="Denmark"/>
        <property name="code" value="DE"/>
    </bean>
    <bean id="us" class="com.cognizant.springlearn.model.Country" scope="prototype">
        <property name="name" value="the US"/>
        <property name="code" value="US"/>
    </bean>
</beans>